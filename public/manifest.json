{
  "name": "Quext AI",
  "version": "0.0.1",
  "description": "An AI-powered quiz generator for any web page",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
